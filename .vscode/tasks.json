{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kind-run",
      "type": "shell",
      "command": "kind ${fileBasenameNoExtension} --run",
      "presentation": {
        "showReuseMessage": false,
        "clear": true,
        "focus": true
      },
      "options": {
        "cwd": "${workspaceFolder}/Kind/Exercises"
      }
    },
    {
      "label": "kind-check",
      "type": "shell",
      "command": "kind ${file}",
      "presentation": {
        "showReuseMessage": false,
        "clear": true,
        "focus": true,
      },
      "options": {
        "cwd": "${workspaceFolder}/Kind/Exercises"
      }
    }
  ]
}
